{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node", // Change to node for compatibility with Node.js
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true // Ensures compatibility with CommonJS modules
  },
  "include": ["src/**/*.ts"], // Ensure all TypeScript files are included
  "exclude": ["node_modules", "dist"] // Exclude node_modules and build outputs
}
